@page
@model jcgc.App.frontend.Pages.agenteModel
@{
        ViewData["Title"] = "Agente";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TRANSITO Y TRANSPORTE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/formulario.css" />
</head>


  <div class="contact_form">

                <div class="formulario">      
                  <h1>Datos registro accidente</h1>
                    <h3>registre</h3>
            
            
                      <form action="/update" method="post">       
            
                        
                            <p>
                              <label for="nombre" class="colocar_nombre">Nombre
                                <span class="obligatorio">*</span>
                              </label>
                                <input type="text" name="introducir_nombre" id="nombre" required="obligatorio" placeholder="Escribe tu nombre">
                            </p>
                          
                            <p>
                              <label for="email" class="colocar_email">Email
                                <span class="obligatorio">*</span>
                              </label>
                                <input type="email" name="introducir_email" id="email" required="obligatorio" placeholder="Escribe tu Email">
                            </p>
                        
                            <p>
                              <label for="telefone" class="colocar_telefono">Teléfono
                              </label>
                                <input type="tel" name="introducir_telefono" id="telefono" placeholder="Escribe tu teléfono">
                            </p>    
                          
                            <p>
                              <label for="website" class="colocar_website">personas implicadas
                              </label>
                                <input type="text" name="introducir_asunto" id="assunto" required="obligatorio" placeholder="Escribe el nombre de las personas implicadas">
                            </p>    
                          
                            <p>
                              <label for="asunto" class="colocar_asunto">barrio
                                <span class="obligatorio">*</span>
                              </label>
                                <input type="text" name="introducir_asunto" id="assunto" required="obligatorio" placeholder="Escribe el nombre del barrio">
                            </p>    
                          
                            <p>
                              <label for="mensaje" class="colocar_mensaje">Descripcion accidente
                                <span class="obligatorio">*</span>
                              </label>                     
                                                <textarea name="introducir_mensaje" class="texto_mensaje" id="mensaje" required="obligatorio" placeholder="Deja aquí tu descripcion..."></textarea> 
                                            </p>                    
                            
                           
                             <button type="submit" name="enviar_formulario" id="enviar"><p>Guardar</p></button>
                           
                            <p class="aviso">
                              <span class="obligatorio"> * </span>los campos son obligatorios.
                            </p>          
                        
                      </form>
                </div>  
              </div>